{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,
        "outDir": "./lib",
        "strict": true,
        "rootDir": ".",
        "removeComments": false,
        "esModuleInterop": true,
        "types": ["node"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["playground/**/*"],
    "exclude": ["node_modules", "lib", "**/*.spec.ts"]
}
